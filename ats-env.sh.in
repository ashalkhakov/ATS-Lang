#!/bin/bash

PACKAGE_TARNAME=@PACKAGE_TARNAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
prefix=@prefix@

export ATSHOME="${prefix}/share/${PACKAGE_TARNAME}-${PACKAGE_VERSION}"
export ATSHOMERELOC="/usr/share/atshome" # this is the default value

if [ ! -d "$ATSHOME" ]; then
  echo "ATS must be installed at '$ATSHOME'"
  exit 1
fi

prog=`basename $0`

case $prog in
  ats-env.sh)
    echo "This is a wrapper script for atscc, atslib, and atsopt."
    echo "The script should be symbolic linked from these aliases."
    exit 1
    ;;
  *)
    exec "$ATSHOME/bin/$prog" "$@"
    ;;
esac

