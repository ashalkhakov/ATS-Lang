GCC=gcc
TIGDIR=.
TIGCOM=./comptig

######

ack: Examples/ack.tig
	$(TIGCOM) Examples/ack.tig > ack.tig.s
	$(GCC) -o ack ack.tig.s $(TIGDIR)/tiger_prelude.c

######

evenodd: Examples/evenodd.tig
	$(TIGCOM) Examples/evenodd.tig > evenodd.tig.s
	$(GCC) -o evenodd evenodd.tig.s $(TIGDIR)/tiger_prelude.c

######

