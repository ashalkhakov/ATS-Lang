######
#
# Makefile file for some examples translated from the book:
# Advanced UNIX Programming (2nd edition) by Marc Rochkind
#
######

#
# Author: Hongwei Xi (hwxi AT cs DOT bu DOT edu)
# Start Time: Summer, 2009
#

######

ATSHOMEQ = $(or $(ATSHOME), "/usr")
ATSCC=$(ATSHOMEQ)/bin/atscc
ATSOPT=$(ATSHOMEQ)/bin/atsopt

######

.PHONY: all
all: checkall

######

checkall: compall cleanall

######

compall: \
  testlock \
  backward \
  backward2 \
  pathnames \
  longls \
  getcwdx \

######

testlock: AUP_2_4_3.dats
	$(ATSCC) -o testlock AUP_2_4_3.dats

backward: AUP_2_13_0.dats
	$(ATSCC) -o backward AUP_2_13_0.dats \
     && ./backward "AUP_2_13_0.dats"

backward2: AUP_2_14_0.dats
	$(ATSCC) -o backward2 AUP_2_14_0.dats \
     && ./backward2 "AUP_2_14_0.dats"

pathnames: AUP_3_4.dats
	$(ATSCC) -o pathnames AUP_3_4.dats \
     && ./pathnames

longls: AUP_3_5.dats
	$(ATSCC) -o longls AUP_3_5.dats \
     && ./longls

getcwdx: AUP_3_6_4.dats
	$(ATSCC) -o getcwdx AUP_3_6_4.dats \
     && ./getcwdx

test42: AUP_4_2.dats
	$(ATSCC) -o test42 AUP_4_2.dats \
     && ./test42

######

clean::
	rm -f *~
	rm -f *_?ats.c *_?ats.o

cleanall: clean
	rm -f testlock
	rm -f backward
	rm -f backward2
	rm -f pathnames
	rm -f longls
	rm -f getcwdx
	rm -f test42

###### end of [Makefile] ######
 